<% if booking_object.transfer_request.present? && booking_object.transfer_request.transfer_transaction.present?%>
  <div class="col-sm-7  col-xs-7 mt10 pull-right">
    <div class="input-group">
      <span>Paid</span>
    </div>
  </div>
<% else %>
  <div class="col-sm-7  col-xs-7 pull-right">
    <div id="get_payment_form" >
      <%= form_tag transfer_requests_make_transfer_request_path, id: "booking_form_#{booking_object.id}", class: 'booking_get_payment_form', remote: true, html: {:'data-type' => ''}, method: :post do %>
        <div class="input-group">
          <%= text_field_tag 'code_for_payment',"", class: 'form-control', placeholder: "Enter Code" %>
          <%= hidden_field_tag 'booking_id'," ", value: booking_object.id %> 
          <span class="input-group-btn">
            <%#= submit_tag 'GET', class: 'btn_offer btn btn-default navbar_ride_btn ladda ladda-button', id: "get_btn-#{booking_object.id}" %>
            <%= button_tag(type: "submit", id: "get_btn-#{booking_object.id}", class: "btn_offer btn btn-default navbar_ride_btn ladda ladda-button") do %>
              <span class="ladda-label">GET</span>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>  