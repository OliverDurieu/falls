    <div id="background"></div>
      <% if current_page?(root_path) %>
        <%= render 'layouts/navigation_2' %>
      <% else %>
        <%= render 'layouts/default_navigation' %>
      <% end %> 
    </header>

        <div id="labels">
          
       
    </div>

    <div class="main-area">
    <% if params[:controller] != "driver_verifications" %>
      <%= render partial: '/users/header_tabs' %>
    <% end %>
      <%= render 'layouts/flash_messages' %>
      
      <%= yield %>
     

    </div>
    
    <%= render 'layouts/app_footer' %>
     <%= yield :script %>
     <style type="text/css">
      .sub_nav {
          margin-bottom: 0px !important;
      }
     </style>
     
