<%= stylesheet_link_tag 'new_design/rides_info' %>
<div class="dashboard">
  <div class="row">
    <div class="col-md-12">
      <div class="message">
        <div class="header">
        <i class="fa fa-arrow-left"></i> <%= link_to 'Back to last page', url_for(:back), class: 'back_search' %>
        </div>
      </div>
      <div class="col-md-3 col-sm-4 col-xs-12 side_box">
          <div class="user_profile text-center">
            <div class="img_holder">
             <%= link_to "#{image_tag @user.profile.picture, class: "img-responsive"}".html_safe, public_profile_user_path(@user.id) %>
              <span class="tag"><i class="fa fa-star"></i>
                <% if (@user.ratings.present?) %>  
                  <%= (@user.ratings.pluck('star').sum.to_f/@user.ratings.count).round(2) %>
                <% else %>
                  N/A  
                <% end %>
              </span>
            </div>
            <h3><%= @user.display_first_last_name %></h3>
          </div>
          <div class="panel panel-default hilde_tb">
            <div class="panel-heading">Verifications</div>
            <div class="panel-body Verifications m-15">
              <ul class="list-unstyled">
                <li>
                  <div class="img_holder">
                    <% if @user.email_verified == true %>
                      <%= image_tag 'check.png', class: 'img-responsive'%>
                    <%else %>
                      <%= image_tag 'uncheck.png', class: 'img-responsive'%>
                    <% end %>
                  </div>
                  <span>Email Address</span>
                  <small><%= email_verfied %></small>
                </li>
                <li>
                <div class="img_holder">
                  <% if @user.phone_number.verified_no == true %>
                    <%= image_tag 'check_new.png', class: 'img-responsive'%>
                  <%else %>
                    <%= image_tag 'uncheck.png', class: 'img-responsive'%>
                  <% end %>   
                  </div>
                  <span>Phone Number</span>
                  <small><%= phone_number_verfied %></small>
                </li>
                <li>
                <div class="img_holder">
                  <% if @user.fb_connect? %>
                    <%= image_tag 'check_new.png', class: 'img-responsive'%>
                  <%else %>
                  <%= image_tag 'uncheck.png', class: 'img-responsive'%>
                  <% end %>
                  </div>
                  <span>Facebook</span>
                  <small><%= fb_friends %></small>
                </li>
                <li>
                <div class="img_holder">
                  <%= image_tag 'uncheck.png', class: 'img-responsive'%>
                  </div>
                  <span>Payments</span>
                  <small>Stripe</small>
                </li>
              </ul>
              <div class="text-center">
                <p>(More Coming soon)</p>
                <!-- <a class="btn btn-primary" href="/notifications/booking_notifications">See all booking notifications</a> -->
              </div>
            </div>
          </div>

          <div class="panel panel-default hilde_tb">
            <div class="panel-heading">Fast check
            </div>
            <div class="panel-body">
              <ul class="list-unstyled">
                <li><a href="<%= email_alerts_path %>">View/Manage Listing</a></li>
                <li><a href="<%= bookings_path %>">My bookings</a></li>
                <li><a href="<%= received_ratings_path %>">Reviews</a></li>
              </ul>
            </div>
          </div>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-12">
        <div class=" details_box">
          <ul>
            <li>Total ride posted: <%= @user.rides.size %></li>
            <li>Total passengers: <%= @user.get_total_seats_booked %></li>
            <li>Total rides gained as passenger: <%= @user.rides_gained_count %></li>
            <li>Total ratings: <%= @user.ratings.size %></li>
            <li>Ratings: <%= @user.ratings.size %></li>
          </ul>
          <div class="checkout">
          <ul class="list-unstyled pull-right mobile_show">
                <li class=""><h4>Guru</h4><h3>+5000pts</h3></li>
              </ul>
            <%= progress_bar 0.7 %> 
            <ul class="list-unstyled hide_mobile">
                <li class="active"><p>Newbie</p>+50pts</li>
                <li class="next"><p>Friends</p>+500pts</li>
                <li class=""><p>Old Mate</p>+1000pts</li>
                <li class=""><p>Guru</p>+5000pts</li>
                <li class=""><p>LAMULE AMBASSADOR</p>+10,000pts</li>
              </ul>
            </div>
          </div>
          <div class="panel panel-default massage_box">
            <div class="panel-body">
              <div class="  img-holder_car">
                <% if @user.cars.first.present? %>
                  <%= image_tag @user.cars.first.picture("profile" ), class: 'img-responsive' %>
                  <p><%= @user.cars.first.car_model.name %></p>
                <% end %>
              </div>
              <div class="<%= show_message_link(@user) %>">
                <a href="#" data-toggle="modal" data-target="#contact-user" >
                  <i class="fa fa-envelope"></i> Send <%= @user.display_first_name %> a message
                </a>
              </div>
            </div>
          </div>  
          <div class="col-md-3 col-sm-4 col-xs-12 side_box">
        <div class="panel panel-default hide_d">
          <div class="panel-heading">Verifications</div>
          <div class="panel-body Verifications m-15">
            <ul class="list-unstyled">
              <li>
              <div class="img_holder">
                <% if @user.email_verified == true %>
                 <%= image_tag 'check_new.png', class: 'img-responsive'%>
                <%else %>
                  <%= image_tag 'uncheck.png', class: 'img-responsive'%>
                <% end %>
                </div>
                <span>Email Address</span>
                <small><%= email_verfied %></small>
              </li>
              <li>
              <div class="img_holder">
                <% if @user.phone_number.verified_no == true %>
                  <%= image_tag 'check_new.png', class: 'img-responsive'%>
                <%else %>
                  <%= image_tag 'uncheck.png', class: 'img-responsive'%>
                <% end %>  
                </div>
                <span>Phone Number</span>
                <small><%= phone_number_verfied %></small>
              </li>
              <li>
              <div class="img_holder">
                <% if @user.fb_connect? %>
                  <%= image_tag 'check_new.png', class: 'img-responsive'%>
                <%else %>
                  <%= image_tag 'uncheck.png', class: 'img-responsive'%>
                <% end %>
                </div>
                <span>Facebook</span>
                <small><%= fb_friends %></small>
              </li>
              <li>
              <div class="img_holder">
                <%= image_tag 'uncheck.png', class: 'img-responsive'%>
                </div>
                <span>Payments</span>
                <small>Stripe</small>
              </li>
            </ul>
            <div class="text-center">
              <p>(More Coming soon)</p>
            </div>
          </div>
        </div>

        <div class="panel panel-default hide_d">
          <div class="panel-heading">Fast check
          </div>
          <div class="panel-body">
            <ul class="list-unstyled">
              <li><a href="<%= email_alerts_path %>">View/Manage Listing</a></li>
              <li><a href="<%= bookings_path %>">My bookings</a></li>
              <li><a href="<%= received_ratings_path %>">Reviews</a></li>
            </ul>
          </div>
        </div>
    </div>
        </div>  
    </div>
  </div>
</div>

<div class="modal fade" id="contact-user" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"aria-hidden="true">
  <div class="form_area_box modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body  ">
        <div class="message_ride search-ride">
        <div class="sub_text text-center ">
          <p>Send a message to <%= @user.first_name %>.</p> 
        </div>
        <%= form_tag send_direct_message_users_path, method: :post, role: "form", :id => 'send_direct_message' do %>
           <!-- && @ride.user.phone_number.public_status?  -->
          <div class="">
            <div class="form-group">
                <%= text_area_tag "private_msg", nil, class: "form-control", rows: 4, placeholder: "Write your message here.", required: true %>
                <%= hidden_field_tag 'reciever'," ", value: @user.id %>
              <button id="send_message_button" class="ladda-button"  data-color="grey" data-style="expand-right" type="submit"><span class="ladda-label">SEND MESSAGE</span></button>
              <%#= submit_tag "Send", name: nil, class: "btn btn-primary" %>
            </div>          
          </div>       
          <% end %>
        </div> 
        <div class="<%= show_if_current_user(@user) %>">
          <p>Cannot send message to your self.</p>
        </div>
    </div>
    </div>
  </div>
</div>

